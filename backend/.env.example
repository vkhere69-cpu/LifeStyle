PORT=5000
MONGODB_URI=mongodb://localhost:27017/lifestyle
JWT_SECRET=your_jwt_secret_key_change_in_production
NODE_ENV=development

# Instagram API (optional)
INSTAGRAM_TOKEN=your_instagram_token

# YouTube API (optional)
YOUTUBE_API_KEY=your_youtube_api_key

# Cloudinary (optional)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (for subscriber notifications)
# For cloud platforms (Render.com, Heroku, etc), use port 465 with SMTP_SECURE=true
# For localhost, you can use port 587 with SMTP_SECURE=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM_NAME=Lifestyle
FRONTEND_URL=http://localhost:5173
